{% extends 'base.html.twig' %}

{% block title %}Inscription Intervenant{% endblock %}

{% block body %}

    <div class="container text-center p-3">

        <h1 class="my-5" style="font-family: Bungee; color: rgb(255, 255, 255);">Bienvenue Intervenant</h1>
    
        {{ form_errors(registrationForm) }}

        {% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

        {{ form_start(registrationForm, {'attr': {'class': 'row justify-content-center'}}) }}
            <div class="col-md-4 d-grid gap-2">
                {{ form_row(registrationForm.nom, {
                    label: 'Nom', 
                    label_attr: {'style': 'color: #FFFFFF; font-family: Ubuntu;'}}) }}

                {{ form_row(registrationForm.nomDeScene, {
                    label: 'Nom de scène', 
                    label_attr: {'style': 'color: #FFFFFF; font-family: Ubuntu;'}}) }}

                {{ form_row(registrationForm.email, {
                    label: 'Email', 
                    label_attr: {'style': 'color: #FFFFFF; font-family: Ubuntu;'}}) }}

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe',
                    label_attr: {'style': 'color: #FFFFFF; font-family: Ubuntu;'}
                }) }}
                {{ form_row(registrationForm.telephone, {
                    label: 'Num. téléphone',
                    label_attr: {'style': 'color: #FFFFFF; font-family: Ubuntu;'}
                }) }}
                
                {{ form_row(registrationForm.agreeTerms, {
                    label: 'J\'accepte les conditions d\'utilisation', 
                    label_attr: {'style': 'color: #FFFFFF; font-family: Ubuntu;'}}) }}

                <button type="submit" class="btn btn-primary mt-5">S'inscrire</button>
                <a href="{{ path('app_home') }}" class="btn btn-outline-dark mt-3 text-decoration-none">Retour à l'accueil</a>
            </div>
        {{ form_end(registrationForm) }}

    </div>
{% endblock %}
