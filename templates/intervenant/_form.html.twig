<div class="container d-flex justify-content-center my-5">
    <div class="registration-card shadow-sm">

        <div class="card-body-custom">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

            {% for child in form %}
                {% if child.vars.name != '_token' %}
                    <div class="mb-3">
                        {{ form_label(child, null, {'label_attr': {'class': 'form-label-custom'}}) }}
                        {{ form_widget(child, {'attr': {'class': 'form-control custom-input'}}) }}
                        {#{{ form_errors(child) }}#}
                    </div>
                {% endif %}
            {% endfor %}

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-dark btn-inscription">
                    {{ button_label|default('Inscription') }}
                </button>
            </div>

            <div class="text-center mt-3">
                <p class="login-link">Vous avez déjà un compte ? <a href="#" class="text-decoration-none text-info">Se connecter</a></p>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
