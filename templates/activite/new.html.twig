{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}New Activite{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="mb-4">
                <h1>Nouvelle Activite</h1>
                <p class="text-muted">Créez une nouvelle activité en remplissant le formulaire ci-dessous</p>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    {{ include('activite/_form.html.twig') }}
                </div>
            </div>

            <div class="mt-3">
                <a href="{{ path('app_activite_index') }}" class="btn btn-link text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
